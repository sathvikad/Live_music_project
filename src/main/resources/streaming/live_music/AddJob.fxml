<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="streaming.live_music.AddJobController" style="-fx-padding: 20;">

    <Label text="Add New Job Request" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextField fx:id="clientField" promptText="Client Name"/>
    <TextField fx:id="titleField" promptText="Event Title"/>
    <TextField fx:id="artistField" promptText="Artist Name"/>
    <TextField fx:id="dateField" promptText="Event Date (YYYY-MM-DD)"/>
    <TextField fx:id="timeField" promptText="Event Time (HH:MM)"/>
    <TextField fx:id="durationField" promptText="Duration (Hours)"/>
    <TextField fx:id="targetAudienceField" promptText="Target Audience"/>
    <TextField fx:id="typeField" promptText="Event Type"/>
    <TextField fx:id="categoryField" promptText="Category"/>

    <Button fx:id="submitButton" text="Submit" onAction="#handleSubmit"/>
    <Button fx:id="backButton" text="Back to Dashboard" onAction="#handleBackToDashboard"/>
</VBox>
