<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="streaming.live_music.AddJobController" style="-fx-padding: 20;">

    <Label text="Add New Job Request" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextField fx:id="clientField" promptText="Client"/>
    <TextField fx:id="eventTitleField" promptText="Event Title"/>
    <TextField fx:id="artistField" promptText="Artist"/>
    <TextField fx:id="dateField" promptText="Date (YYYY-MM-DD)"/>
    <TextField fx:id="timeField" promptText="Time (HH:MM)"/>
    <TextField fx:id="durationField" promptText="Duration (hours)"/>
    <TextField fx:id="targetAudienceField" promptText="Target Audience (number)"/>


    <ComboBox fx:id="typeComboBox" promptText="Select Job Type"/>

    <Button text="Add Job" onAction="#handleAddJob" style="-fx-background-color: green; -fx-text-fill: white;"/>
    <Button text="Back to Dashboard" onAction="#handleBack"/>

</VBox>
