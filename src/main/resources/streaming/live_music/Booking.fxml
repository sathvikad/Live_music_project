<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="streaming.live_music.BookingController" style="-fx-padding: 20;">

    <Label text="Venue Booking System" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextField fx:id="jobRequestIdField" promptText="Job Request ID"/>
    <TextField fx:id="venueNameField" promptText="Venue Name"/>
    <DatePicker fx:id="bookingDateField" promptText="Booking Date"/> <!-- Ensure this is correct -->

    <Button text="Book Venue" onAction="#handleBookVenue" style="-fx-background-color: green; -fx-text-fill: white;"/>
    <Label fx:id="bookingStatusLabel" text="Booking Status:"/>

    <Button fx:id="backButton" text="Back to Dashboard" onAction="#handleBackToDashboard"/>

</VBox>