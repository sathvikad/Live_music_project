<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="streaming.live_music.BookingController" style="-fx-padding: 20;">

    <Label text="Venue Booking System" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <HBox spacing="10">
        <Label text="Job Request ID:"/>
        <TextField fx:id="jobRequestIdField"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Venue Name:"/>
        <TextField fx:id="venueNameField"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Booking Date:"/>
        <DatePicker fx:id="bookingDatePicker"/>
    </HBox>

    <Button text="Book Venue" onAction="#handleBookVenue" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>

    <Label fx:id="statusLabel" text="Booking Status:"/>

    <Button text="Back to Dashboard" onAction="#handleBackToDashboard"/>
</VBox>
