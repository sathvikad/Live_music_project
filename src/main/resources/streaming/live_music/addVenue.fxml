<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="streaming.live_music.AddVenueController" prefWidth="400" prefHeight="400">

    <Label text="Add New Venue" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <TextField fx:id="nameField" promptText="Venue Name" />
    <TextField fx:id="locationField" promptText="Location" />
    <TextField fx:id="capacityField" promptText="Capacity" />
    <TextField fx:id="eventTypeField" promptText="Event Type" />

    <Button text="Add Venue" onAction="#handleAddVenue" />
    <Label fx:id="statusLabel" />

    <!-- New Back Button -->
    <Button text="Back to Dashboard" onAction="#handleBack" />

</VBox>
