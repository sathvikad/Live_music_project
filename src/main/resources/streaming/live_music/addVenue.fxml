<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefWidth="450" prefHeight="380" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="streaming.live_music.AddVenueController">

    <!-- Title -->
    <Text text="Add Venue" layoutX="170" layoutY="30" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Input Fields -->
    <Text text="Venue Name:" layoutX="50" layoutY="70"/>
    <TextField fx:id="venueNameField" layoutX="160" layoutY="60" prefWidth="220" promptText="Enter venue name"/>

    <Text text="Capacity:" layoutX="50" layoutY="110"/>
    <TextField fx:id="capacityField" layoutX="160" layoutY="100" prefWidth="220" promptText="Enter capacity"/>

    <Text text="Suitable For:" layoutX="50" layoutY="150"/>
    <TextField fx:id="suitableForField" layoutX="160" layoutY="140" prefWidth="220" promptText="Enter suitable event types"/>

    <Text text="Category:" layoutX="50" layoutY="190"/>
    <TextField fx:id="categoryField" layoutX="160" layoutY="180" prefWidth="220" promptText="Enter venue category"/>

    <Text text="Booking Price:" layoutX="50" layoutY="230"/>
    <TextField fx:id="bookingPriceField" layoutX="160" layoutY="220" prefWidth="220" promptText="Enter price per hour"/>

    <!-- Buttons -->
    <Button text="Submit" layoutX="160" layoutY="270" prefWidth="100" fx:id="submitButton" onAction="#handleAddVenue"/>
    <Button text="Back to Dashboard" layoutX="140" layoutY="320" prefWidth="150" fx:id="backButton" onAction="#handleBackToDashboard"/>
</AnchorPane>
