<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="streaming.live_music.AutoMatchController" style="-fx-padding: 20;">

    <Label text="Auto Match Requests" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <TableView fx:id="jobRequestTable" prefHeight="300">
        <columns>
            <TableColumn fx:id="eventNameColumn" text="Event Name" prefWidth="200" />
            <TableColumn fx:id="clientColumn" text="Client" prefWidth="150" />
            <TableColumn fx:id="eventDateColumn" text="Event Date" prefWidth="150" />
        </columns>
    </TableView>

    <Button text="Auto Match" fx:id="matchButton" onAction="#handleAutoMatch" />
    <Label fx:id="resultLabel" text="Match Result:" />
    <Button text="Back to Dashboard" onAction="#handleBackToDashboard" />
</VBox>
