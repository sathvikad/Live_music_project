<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="streaming.live_music.AutoMatchController" style="-fx-padding: 25;">

    <!-- Header Section -->
    <Label text="Auto Match Venues" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <!-- Results Section -->
    <Label text="Matching Results:" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <TextArea fx:id="matchResultsArea" prefWidth="550" prefHeight="300" wrapText="true" />

    <!-- Buttons Section -->
    <HBox alignment="CENTER" spacing="30">
        <Button fx:id="startMatchingButton" text="Start Matching" onAction="#handleStartMatching" style="-fx-pref-width: 170px;" />
        <Button fx:id="backButton" text="Back to Dashboard" onAction="#handleBack" style="-fx-pref-width: 170px;" />
    </HBox>
</VBox>
