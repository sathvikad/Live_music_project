<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="streaming.live_music.JobRequestController" alignment="CENTER" spacing="10" prefWidth="600" prefHeight="400">

    <Label text="Job Requests" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <TableView fx:id="jobTable">
        <columns>
            <TableColumn text="Event Name" fx:id="eventNameColumn" prefWidth="200"/>
            <TableColumn text="Event Date" fx:id="eventDateColumn" prefWidth="200"/>
            <TableColumn text="Client" fx:id="clientColumn" prefWidth="200"/>
        </columns>
    </TableView>

    <Button text="Back to Main Menu" onAction="#handleBackToMain" />
</VBox>
