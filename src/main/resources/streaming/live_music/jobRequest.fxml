<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="streaming.live_music.JobRequestController" style="-fx-padding: 20;">

    <Label text="Job Requests" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <TableView fx:id="jobRequestTable" prefHeight="300">
        <columns>
            <TableColumn fx:id="clientColumn" text="Client" prefWidth="150" />
            <TableColumn fx:id="titleColumn" text="Event Title" prefWidth="150" />
            <TableColumn fx:id="artistColumn" text="Artist" prefWidth="150" />
            <TableColumn fx:id="dateColumn" text="Date" prefWidth="100" />
            <TableColumn fx:id="timeColumn" text="Time" prefWidth="100" />
            <TableColumn fx:id="durationColumn" text="Duration" prefWidth="100" />
            <TableColumn fx:id="targetAudienceColumn" text="Target Audience" prefWidth="100" />
            <TableColumn fx:id="typeColumn" text="Type" prefWidth="100" />
            <TableColumn fx:id="categoryColumn" text="Category" prefWidth="100" />
        </columns>
    </TableView>

    <Button text="Back to Dashboard" onAction="#handleBackToDashboard"
            style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
</VBox>