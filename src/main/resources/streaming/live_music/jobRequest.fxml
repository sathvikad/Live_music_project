<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="streaming.live_music.JobRequestController" style="-fx-padding: 20;">

    <Label text="Job Requests" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <TableView fx:id="jobRequestTable" prefHeight="300">
        <columns>
            <TableColumn fx:id="eventNameColumn" text="Event Name" prefWidth="150" />
            <TableColumn fx:id="clientColumn" text="Client" prefWidth="150" />
            <TableColumn fx:id="eventDateColumn" text="Event Date" prefWidth="150" />
            <TableColumn fx:id="expectedAttendanceColumn" text="Attendance" prefWidth="100" />
            <TableColumn fx:id="eventTypeColumn" text="Event Type" prefWidth="100" />
        </columns>
    </TableView>

    <Button text="Back to Dashboard" onAction="#handleBackToMainMenu"
            style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
</VBox>
