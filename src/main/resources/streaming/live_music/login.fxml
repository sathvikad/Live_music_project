<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="streaming.live_music.LoginController" alignment="CENTER" spacing="10" prefWidth="400" prefHeight="300">

    <Label text="Login" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
    <TextField fx:id="usernameField" promptText="Username" />
    <PasswordField fx:id="passwordField" promptText="Password" />
    <Button text="Login" onAction="#handleLogin" prefWidth="150" />
</VBox>
