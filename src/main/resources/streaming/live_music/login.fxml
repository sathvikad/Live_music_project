<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="streaming.live_music.LoginController">
    <Label text="Live Music Venue Matchmaker" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <TextField fx:id="usernameField" promptText="Username" />
    <PasswordField fx:id="passwordField" promptText="Password" />

    <Button text="Login" onAction="#handleLogin" style="-fx-pref-width: 150px;" />

    <Label text="Don't have an account?" />
    <Hyperlink text="Sign Up Here" onAction="#handleSignUpRedirect" />
</VBox>
