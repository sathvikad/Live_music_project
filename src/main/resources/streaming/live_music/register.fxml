<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="streaming.live_music.RegisterController">

    <Label text="Register" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <TextField fx:id="usernameField" promptText="Username" />
    <PasswordField fx:id="passwordField" promptText="Password" />
    <Button text="Register" onAction="#handleRegister" />
    <Hyperlink text="Go to Login" onAction="#switchToLogin" />
</VBox>
