<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="streaming.live_music.RegisterController" style="-fx-padding: 20;">

    <VBox alignment="CENTER" spacing="10">
        <Label text="Register" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
        <TextField fx:id="usernameField" promptText="Username" />
        <PasswordField fx:id="passwordField" promptText="Password" />
        <TextField fx:id="firstNameField" promptText="First Name" />
        <TextField fx:id="lastNameField" promptText="Last Name" />
        <CheckBox fx:id="isManagerCheckbox" text="Manager Account" />
        <Button text="Register" onAction="#handleRegister" />
        <Button text="Back to Login" onAction="#switchToLogin" />
        <Label fx:id="statusLabel" textFill="red" />
    </VBox>
</AnchorPane>
