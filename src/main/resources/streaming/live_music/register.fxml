<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="streaming.live_music.RegisterController"
            prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f0f0f0;">

    <VBox alignment="CENTER" spacing="10.0" layoutX="100" layoutY="50" prefWidth="400">
        <Label text="Register" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

        <!-- Form Fields -->
        <TextField fx:id="firstNameField" promptText="First Name" prefWidth="300" />
        <TextField fx:id="lastNameField" promptText="Last Name" prefWidth="300" />
        <TextField fx:id="usernameField" promptText="Username" prefWidth="300" />
        <PasswordField fx:id="passwordField" promptText="Password" prefWidth="300" />
        <ComboBox fx:id="roleComboBox" prefWidth="300" promptText="Select Role" />

        <!-- Buttons Section -->
        <HBox alignment="CENTER" spacing="15">
            <Button text="Register" onAction="#handleRegister" style="-fx-background-color: #0073e6; -fx-text-fill: white;" />
            <Button text="Back to Login" onAction="#handleBackToLogin" style="-fx-background-color: #d9534f; -fx-text-fill: white;" />
        </HBox>
    </VBox>
</AnchorPane>
